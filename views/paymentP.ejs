<!DOCTYPE html>
<html lang="en">
<%- include('./partial/header.ejs') %>

    <body>
        <%- include('./partial/navbar.ejs') %>
            <%- include('./partial/mobilenavbar.ejs') %>
                <main>
                    <section class="px-1 md:px-7 md:mx-[8%]">
                        <div>
                            <p class="text-4xl text-center">Thank you for purchase.</p>
                            <p id="redirectCount" class="text-center text-blue-500"></p>
                        </div>
                    </section>
                </main>
                <script>
                    $(document).ready(function () {
                        let countdown = 5;

                        // Update the countdown every second
                        let countdownInterval = setInterval(function () {
                            $('#redirectCount').text(`Redirecting to Orders in ${countdown} seconds...`);
                            countdown--;
                            if (countdown === 0) {
                                clearInterval(countdownInterval); // Clear the interval
                                window.location.href = '/orders'; // Redirect
                            }
                        }, 1000); // Update every 1000 milliseconds (1 second)
                    });
                </script>
                <%- include('./partial/footer.ejs') %>
                    <%- include('./partial/scripts.ejs') %>
    </body>

</html>