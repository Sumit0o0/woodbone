<!DOCTYPE html>
<html lang="en">
<%- include('./partial/header.ejs') %>

<body>
  <%- include('./partial/navbar.ejs') %>
  <%- include('./partial/mobilenavbar.ejs') %>
  <main>
    <section class="container px-7 mx-auto my-20">
      <div class="w-fit mx-auto p-4">
        <form id="loginForm" action="" method="post">
          <!-- Sucess Alert -->
          <% if (messages.useralert && messages.useralert.length> 0) { %>
          <div class="bg-red-100 text-red-900 px-4 py-2 my-3 shadow-md" role="alert">
            <div class="flex">
              <div class="py-1">
                <svg class="fill-current h-6 w-6 text-red-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                  <path d="M2.06 16.75l8.294-14.697A1 1 0 0111 2h8a1 1 0 01.95 1.312l-8.294 14.697A1 1 0 019 19H3a1 1 0 01-.95-1.312zM10 16a1 1 0 100-2 1 1 0 000 2zm0-4a1 1 0 100-2 1 1 0 000 2z" />
                </svg>
              </div>
              <div>
                <p class="font-bold">
                  <%= messages.useralert[0] %>
                </p>
                <p class="text-sm text-zinc-600"> <%= messages.useralert[1]%></p>
              </div>
            </div>
          </div>
          <% } %>
          <!-- END -->
          <div class="relative py-2">
            <label class="ms-2 absolute bg-white centerlabel text-gray-700 leading-tight px-2" for="loginmail">Email</label>
            <input class="min-w-[300px] px-1 py-2 border-2" type="email" name="loginmail" id="loginmail">
          </div>
          <div class="relative py-2">
            <label class="ms-2 absolute centerlabel bg-white text-gray-700 leading-tight px-2" for="loginpsw">Password</label>
            <input class="min-w-[300px] px-1 py-2 border-2" type="password" name="loginpsw" id="loginpsw">
          </div>
          <div class="py-2 text-right text-sm text-neutral-400">
            <a href="/account/reset-password">Forget Password!</a>
          </div>
          <div class="relative py-2">
            <button class="flex mx-auto bg-orange-500 font-bold text-white px-5 py-2" type="submit">
              Login
            </button>
          </div>
          <div class="text-center">
            <p>Don't Have Account?<a class="border-b ms-1 border-blue-600 text-blue-700" href="/singup">Singup</a></p>
          </div>
        </form>
      </div>
    </section>
  </main>
  <%- include('./partial/footer.ejs') %>
  <%- include('./partial/scripts.ejs') %>
</body>

</html>